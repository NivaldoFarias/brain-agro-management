{
	"name": "agro-management",
	"description": "Full-stack monorepo for rural producer and farm management with TypeScript, Bun, NestJS, and React",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter='@agro/*' dev",
		"dev:api": "bun run --filter='@agro/api' dev",
		"dev:web": "bun run --filter='@agro/web' dev",
		"build": "bun run --filter='@agro/*' build",
		"build:api": "bun run --filter='@agro/api' build",
		"build:web": "bun run --filter='@agro/web' build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,tsx,cts,mts,js,jsx,cjs,mjs,json}'",
		"format:check": "prettier --check '**/*.{ts,tsx,cts,mts,js,jsx,cjs,mjs,json}'",
		"type-check": "bun run --filter='@agro/*' type-check",
		"test": "bun test",
		"test:api": "bun run --filter='@agro/api' test",
		"test:web": "bun run --filter='@agro/web' test",
		"clean": "bun run --filter='@agro/*' clean"
	},
	"dependencies": {
		"@types/jest": "^30.0.0",
		"pino": "^10.0.0",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@darraghor/eslint-plugin-nestjs-typed": "^6.9.12",
		"@eslint/config-helpers": "^0.5.0",
		"@eslint/js": "^9.39.1",
		"@faker-js/faker": "^10.1.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.3.3",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.0.0",
		"pino-pretty": "^13.1.2",
		"prettier": "^3.4.2",
		"prettier-plugin-jsdoc": "^1.3.2",
		"ts-node": "^10.9.2",
		"type-fest": "^5.2.0",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.20.0"
	}
}
