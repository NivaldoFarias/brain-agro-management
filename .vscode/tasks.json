{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Vite Dev Server",
            "type": "shell",
            "command": "bun",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/apps/web"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE.*ready",
                    "endsPattern": "(Local|Network):.*http://localhost:\\d+"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Start API Dev Server",
            "type": "shell",
            "command": "bun",
            "args": ["--inspect", "--watch", "src/main.ts"],
            "options": {
                "cwd": "${workspaceFolder}/apps/api"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Bun Inspector",
                    "endsPattern": "Application running:"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Run API Tests",
            "type": "shell",
            "command": "bun",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/apps/api"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run Web Tests",
            "type": "shell",
            "command": "bun",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/apps/web"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build API",
            "type": "shell",
            "command": "bun",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/apps/api"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build Web",
            "type": "shell",
            "command": "bun",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/apps/web"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Lint & Format",
            "type": "shell",
            "command": "bun",
            "args": ["run", "lint:fix", "&&", "bun", "run", "format"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
