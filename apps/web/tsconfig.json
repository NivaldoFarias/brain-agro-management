{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "outDir": "./dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"],
            "@agro/shared": ["../../packages/shared"],
            "@agro/shared/*": ["../../packages/shared/*"]
        }
    },
    "include": ["src/**/*", "vite.config.ts", "package.json", "src/locales/*.json"],
    "references": [{ "path": "../../packages/shared" }]
}
