{
	"name": "@agro/api",
	"version": "0.0.1",
	"description": "Rural producer and farm management system API",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"build": "bun build src/main.ts --outdir=dist --target=bun",
		"start": "NODE_ENV=production bun dist/main.js",
		"start:dev": "bun run dev",
		"start:prod": "bun run start",
		"type-check": "tsc --build",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:cov": "bun test --coverage",
		"test:e2e": "bun test --coverage e2e",
		"typeorm": "typeorm-ts-node-esm",
		"migration:generate": "bun run typeorm migration:generate -d src/database/data-source.ts",
		"migration:run": "bun run typeorm migration:run -d src/database/data-source.ts",
		"migration:revert": "bun run typeorm migration:revert -d src/database/data-source.ts",
		"db:seed": "bun run src/database/seeds/index.ts",
		"clean": "rm -rf dist .turbo node_modules"
	},
	"dependencies": {
		"@agro/shared": "workspace:*",
		"@nestjs/common": "^11.1.9",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.9",
		"@nestjs/platform-express": "^11.1.9",
		"@nestjs/swagger": "^11.2.3",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.4.0",
		"@nestjs/typeorm": "^11.0.0",
		"better-sqlite3": "^12.4.6",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3",
		"helmet": "^8.1.0",
		"nestjs-pino": "^4.5.0",
		"pino-http": "^11.0.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"sqlite3": "^5.1.7",
		"typeorm": "^0.3.27",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.12",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.9",
		"@types/better-sqlite3": "^7.6.13",
		"@types/bun": "^1.3.3",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"supertest": "^7.1.4"
	}
}
